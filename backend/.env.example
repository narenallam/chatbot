# Backend Environment Variables Example
# Copy this file to .env and update the values

# Application Configuration
APP_NAME="Personal Assistant AI Chatbot"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Configuration (JSON array format)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Database Configuration
DATABASE_URL=sqlite:///./data/chatbot.db
CHROMA_DB_PATH=./embeddings
CHROMA_COLLECTION_NAME=documents
CHROMA_OPENAI_DB_PATH=./embeddings_openai
CHROMA_OPENAI_COLLECTION_NAME=documents_openai

# LLM Provider Configuration (ollama or openai)
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b-instruct-q8_0
OLLAMA_TIMEOUT=120

# OpenAI Configuration (required if using OpenAI provider)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=60

# Embedding Configuration
EMBEDDING_PROVIDER=sentence_transformers
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# Web Search Configuration
WEB_SEARCH_ENABLED=true
SERPAPI_API_KEY=your_serpapi_key_here
BRAVE_API_KEY=your_brave_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here
BING_API_KEY=your_bing_api_key_here

# File Storage Configuration
DATA_STORAGE_PATH=./data
ORIGINAL_FILES_PATH=./data/original_files
HASHED_FILES_PATH=./data/hashed_files
CONVERTED_FILES_PATH=./data/converted
TEMP_FILES_PATH=./data/temp
METADATA_PATH=./data/metadata
LOGS_PATH=./data/logs
MAX_FILE_SIZE_MB=500

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_SEARCH_RESULTS=5
MIN_RELEVANCE_SCORE=0.5
SEARCH_TYPE=similarity
HYBRID_SEARCH_ALPHA=0.5

# Chat Configuration
MAX_CHAT_HISTORY=10
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=2000
CONVERSATION_MEMORY_TYPE=buffer_window

# Vector Search Configuration
VECTOR_SEARCH_K=10
RERANK_TOP_K=5
USE_RERANKING=true

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=100
USE_GPU=false
MULTIPROCESSING_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Security Configuration (generate a secure key for production)
SECRET_KEY=your_secret_key_here_generate_a_secure_one
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090

# HuggingFace Configuration (for open models)
HF_TOKEN=your_huggingface_token_here
TOKENIZERS_PARALLELISM=false

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Admin Configuration (change for production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# Feature Flags
ENABLE_WEB_SEARCH=true
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_CHAT_HISTORY=true
ENABLE_ANALYTICS=false