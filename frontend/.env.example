# Frontend Environment Variables Example
# Copy this file to .env and update the values
# Note: All React environment variables must start with REACT_APP_

# React App Configuration
PORT=3000
BROWSER=none
GENERATE_SOURCEMAP=false

# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=30000
REACT_APP_WS_URL=ws://localhost:8000

# Application Settings
REACT_APP_APP_NAME=Personal Assistant AI Chatbot
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_WEB_SEARCH=true
REACT_APP_ENABLE_DOCUMENT_UPLOAD=true
REACT_APP_ENABLE_CHAT_HISTORY=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_ANALYTICS=false

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_SIDEBAR_DEFAULT_OPEN=true
REACT_APP_CONSOLE_DEFAULT_OPEN=false

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE_MB=500
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.txt,.docx,.doc,.rtf,.odt,.csv,.xlsx,.xls,.pptx,.ppt,.png,.jpg,.jpeg,.gif,.bmp,.tiff,.svg,.md,.html,.htm,.xml,.json

# Chat Configuration
REACT_APP_MAX_MESSAGE_LENGTH=10000
REACT_APP_AUTO_SCROLL_CHAT=true
REACT_APP_SHOW_TIMESTAMPS=true
REACT_APP_MESSAGE_SOUND_ENABLED=false

# Document Preview Configuration
REACT_APP_PREVIEW_MAX_PAGES=50
REACT_APP_PREVIEW_DEFAULT_ZOOM=1.0

# WebSocket Configuration
REACT_APP_WS_RECONNECT_INTERVAL=5000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=10

# Search Configuration
REACT_APP_SEARCH_DEBOUNCE_MS=300
REACT_APP_MIN_SEARCH_LENGTH=2

# Polling Configuration
REACT_APP_HEALTH_CHECK_INTERVAL=30000
REACT_APP_DOCUMENT_REFRESH_INTERVAL=60000

# Performance Configuration
REACT_APP_LAZY_LOAD_ENABLED=true
REACT_APP_VIRTUAL_SCROLL_ENABLED=true

# External Resources
REACT_APP_FONT_URL=https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap
REACT_APP_ICON_FONT_URL=https://fonts.googleapis.com/css2?family=Material+Icons&display=swap

# Logging Configuration
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_CONSOLE_LOGS=true

# Error Tracking (optional - for production)
REACT_APP_SENTRY_DSN=
REACT_APP_SENTRY_ENVIRONMENT=development

# Analytics (optional - if enabled)
REACT_APP_GA_TRACKING_ID=
REACT_APP_MIXPANEL_TOKEN=

# Security
REACT_APP_CSP_ENABLED=true
REACT_APP_SECURE_COOKIES=false

# Development Tools
REACT_APP_ENABLE_DEV_TOOLS=true
REACT_APP_MOCK_API=false